{
  "name": "wit-extension",
  "private": true,
  "version": "1.0.0",
  "description": "WIT - Words In Technicolor: Dyslexia reading assistance extension",
  "type": "module",
  "scripts": {
    "build:panel": "vite build",
    "build:content": "cross-env BUILD_TARGET=content vite build",
    "build:background": "cross-env BUILD_TARGET=background vite build",
